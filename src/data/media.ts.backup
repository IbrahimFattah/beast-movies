// Get featured content for hero
export const getFeaturedContent = (): MediaItem => {
    return mediaData[0]; // THE PITT as featured
};

// Get items with continue watching progress
export const getContinueWatching = (): MediaItem[] => {
    return mediaData.filter((item) => item.continueWatching);
};

// Get items by type
export const getByType = (type: 'movie' | 'tv'): MediaItem[] => {
    return mediaData.filter((item) => item.type === type);
};

// Get item by ID
export const getById = (id: string): MediaItem | undefined => {
    return mediaData.find((item) => item.id === id);
};
